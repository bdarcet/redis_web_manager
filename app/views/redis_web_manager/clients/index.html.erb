<div class="container">
  <div class="row my-4">
    <div class="col-12">
      <%= url(@url) %>
      <%= status(@status) %>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            Clients
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>ID</th>
                <th>Address</th>
                <th>Age</th>
                <th>Idle</th>
                <th>Last command</th>
                <th>Block</th>
              </tr>
              </thead>
              <tbody>
              <% @clients.each do |c| %>
                <tr>
                  <td><%= c[:id] %></td>
                  <td><%= c[:addr] %></td>
                  <td><%= c[:age] %></td>
                  <td><%= c[:idle] %></td>
                  <td><%= c[:cmd] %></td>
                  <td>
                    <button class="btn btn-danger">
                      Block
                    </button>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>