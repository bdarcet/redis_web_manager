<div class="container">
  <%= render 'redis_web_manager/shared/status' %>
  <div class="row my-4">
    <div class="col-sm-12 col-md-12">
      <ul class="nav nav-tabs">
        <% @types.each_with_index do |type, index| %>
          <li class="nav-item">
            <a class="nav-link <%= index == 0 ? 'active' : '' %>" href="#<%= type %>"><%= type %></a>
          </li>
        <% end %>
      </ul>
      <div class="tab-content">
        <% @keys.group_by {|h| h[:type]}.each_with_index do |(k, v), index| %>
          <div class="tab-pane fade <%= index == 0 ? 'active show' : '' %>" id="<%= v[0][:type] %>" role="tabpanel" aria-labelledby="<%= v[0][:type] %>-tab">
            <%# FIXME: PAGINATION %>
            <div class="card">
              <ul class="list-group list-group-flush">
                <% v.each do |data| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= link_to data[:key], show_key_path(key: data[:key]) %>
                    <div class="">
                      <%= link_to 'Edit', edit_key_path(key: data[:key]), title: "Edit #{data[:key]}", class: 'btn btn-sm btn-primary ml-2' %>
                      <%= link_to 'Delete', destroy_key_path(key: data[:key]), method: :delete, data: {confirm: 'Are you sure ?'}, title: "Delete #{data[:key]}", class: 'btn btn-sm btn-danger ml-2' %>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>