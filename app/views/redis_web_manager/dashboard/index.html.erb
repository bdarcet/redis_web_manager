<div class="container">
  <div class="row my-4">
    <div class="col-12">
      <kbd><%= @name %></kbd>
      <%= status(@status) %>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-sm-12 col-md-8">
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">
                Memory usage
              </h5>
            </div>
            <div class="card-body">

            </div>
          </div>
        </div>
      </div>
      <div class="row mb-sm-4 mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">
                IO usage
              </h5>
            </div>
            <div class="card-body">

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            Information
          </h5>
        </div>
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            <% @information.each do |data| %>
              <li class="list-group-item d-flex justify-content-between">
                <%= data[:name] %>
                <span><%= data[:value] %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>